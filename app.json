{
  "expo": {
    "name": "HideTok",
    "slug": "hidetok",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "jsEngine": "hermes",
    "android": {
      "package": "com.hidetok.app",
      "versionCode": 3,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "enableHermes": true,
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#0A0A0A"
      },
      "userInterfaceStyle": "automatic",
      "backgroundColor": "#0A0A0A",
      "softwareKeyboardLayoutMode": "pan"
    },
    "ios": {
      "bundleIdentifier": "com.hidetok.app",
      "supportsTablet": false,
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#0A0A0A",
        "dark": {
          "image": "./assets/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A"
        }
      },
      "userInterfaceStyle": "automatic",
      "backgroundColor": "#0A0A0A",
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "UIStatusBarStyle": "UIStatusBarStyleLightContent",
        "NSCameraUsageDescription": "HideTok necesita acceso a tu cámara para que puedas tomar fotos y videos para compartir en tus publicaciones.",
        "NSMicrophoneUsageDescription": "HideTok necesita acceso a tu micrófono para grabar audio en tus videos.",
        "NSPhotoLibraryUsageDescription": "HideTok necesita acceso a tu galería para que puedas seleccionar fotos y videos para compartir."
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png",
      "name": "HideTok - Red Social Anónima",
      "shortName": "HideTok",
      "description": "Comparte de forma anónima con HideTok",
      "backgroundColor": "#0A0A0A",
      "themeColor": "#8B5CF6",
      "orientation": "portrait-primary"
    },
    "extra": {
      "eas": {
        "projectId": "920ff7aa-c0a9-481d-82c0-4e3d57386175"
      }
    },
    "plugins": [
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#8B5CF6"
        }
      ]
    ],
    "owner": "giacomogonzales20"
  }
}
