{
  "expo": {
    "name": "hidetok-simple",
    "slug": "hidetok-simple",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": ["ios", "android", "web"],
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "jsEngine": "hermes",
    "android": {
      "package": "com.hidetoksimple.app",
      "versionCode": 3,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "enableHermes": true,
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#0A0A0A"
      },
      "userInterfaceStyle": "automatic",
      "backgroundColor": "#0A0A0A",
      "softwareKeyboardLayoutMode": "pan"
    },
    "ios": {
      "bundleIdentifier": "com.hidetoksimple.app",
      "supportsTablet": false,
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#0A0A0A",
        "dark": {
          "image": "./assets/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A"
        }
      },
      "userInterfaceStyle": "automatic",
      "backgroundColor": "#0A0A0A",
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "UIStatusBarStyle": "UIStatusBarStyleLightContent"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png",
      "name": "HideTok - Red Social Anónima",
      "shortName": "HideTok",
      "description": "Comparte de forma anónima con HideTok",
      "backgroundColor": "#0A0A0A",
      "themeColor": "#8B5CF6",
      "orientation": "portrait-primary"
    },
    "extra": {
      "eas": {
        "projectId": "31297521-34c6-4238-af4f-e663953af31f"
      }
    }
  }
}