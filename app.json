{
  "expo": {
    "name": "HideTok",
    "slug": "hidetok-simple",
    "scheme": "hidetok",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "jsEngine": "hermes",
    "android": {
      "package": "com.hidetok.app",
      "versionCode": 3,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "enableHermes": true,
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#0A0A0A"
      },
      "userInterfaceStyle": "automatic",
      "backgroundColor": "#0A0A0A",
      "softwareKeyboardLayoutMode": "pan",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "hidetok.com",
              "pathPrefix": "/post"
            },
            {
              "scheme": "https",
              "host": "www.hidetok.com",
              "pathPrefix": "/post"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "ios": {
      "bundleIdentifier": "com.hidetok.app",
      "supportsTablet": false,
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#0A0A0A",
        "dark": {
          "image": "./assets/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A"
        }
      },
      "userInterfaceStyle": "automatic",
      "backgroundColor": "#0A0A0A",
      "associatedDomains": [
        "applinks:hidetok.com",
        "applinks:www.hidetok.com"
      ],
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "UIStatusBarStyle": "UIStatusBarStyleLightContent",
        "NSCameraUsageDescription": "HideTok necesita acceso a tu cámara para que puedas tomar fotos y videos para compartir en tus publicaciones.",
        "NSMicrophoneUsageDescription": "HideTok necesita acceso a tu micrófono para grabar audio en tus videos.",
        "NSPhotoLibraryUsageDescription": "HideTok necesita acceso a tu galería para que puedas seleccionar fotos y videos para compartir.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png",
      "name": "HideTok - Red Social Anónima",
      "shortName": "HideTok",
      "description": "Comparte de forma anónima con HideTok",
      "backgroundColor": "#0A0A0A",
      "themeColor": "#8B5CF6",
      "orientation": "portrait-primary"
    },
    "extra": {
      "eas": {
        "projectId": "31297521-34c6-4238-af4f-e663953af31f"
      }
    },
    "plugins": [
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#8B5CF6",
          "defaultChannel": "default"
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.600935858829-v7m2m7j21k2sae85u0cd1mnsuq0vds0b"
        }
      ],
    ],
    "owner": "giacomogonzales"
  }
}
